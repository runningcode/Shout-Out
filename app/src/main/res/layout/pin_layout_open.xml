<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:background="@drawable/shouts_expanded"
              android:layout_width="wrap_content"
              android:layout_height="@dimen/pin_image_height">


    <com.osacky.shoutout.views.RoundedImageView
        android:id="@+id/profile_image"
        android:layout_width="@dimen/pin_profile"
        android:layout_height="@dimen/pin_profile"
        android:layout_margin="@dimen/profile_padding"
        android:src="@drawable/ic_compose_status_normal"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/pin_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textSize="12sp"
            android:textStyle="bold"
            android:paddingRight="10dp"
            android:maxWidth="200dp"
            />

        <TextView
            android:id="@+id/pin_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:autoLink="all"
            android:textSize="12sp"
            android:maxWidth="200dp"
            />
    </LinearLayout>

</LinearLayout>